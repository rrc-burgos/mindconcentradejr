<link rel="stylesheet" href="/css/login.css ">

<body>
    <a href="/">
        <img src="/img/logom.jpg" id="logo">
    </a>

    <nav>
        <button class="nav-boton" onclick="accion()"><b>MENU</b></button>
        <a href="/" class="nav-enlace desaparece"><b>Inicio</b></a>
        <a href="/registro" class="nav-enlace desaparece"><b>Registro</b></a>
    </nav>

    <form action="/login" method="post">
        <div class="container">
            <br>
            <img class="img2" src="/img/login2.png" alt="">

            <div id="titulo">
                <h2><b>Iniciar sesión</b></h2>
            </div>
            <div id="labels">
                <div id="usuario">
                    <label for="" id="user"><b>Nombre de usuario</b></label>
                    <input type="text" name="username" id="username" checked>
                </div>

                <div id="contraseña">
                    <label for="" id="pass"><b>Contraseña de usuario</b></label>
                    <input type="password" name="password" id="password" checked>
                </div>
            </div>

            <div class="registro">
                <h2 id="registro">¿Aun no tienes cuenta?
                    <a class="link" href="/registro">Registrate</a>
                </h2>
            </div>

            <div class="boton">
                <button type="submit" id="ingresar"><b> Ingresar </b></button>
            </div>
            <br>
    </form>

    <footer class="second-footer">
        <p id="mind">
            &copy; <a href="/">MindConcentrade.com - 2022</a>
        </p>
    </footer>
</body>