<link rel="stylesheet" href="/css/listar.css ">

<form action="/usuario/listar/{{user.id_usuario}}" method="get">

    <div class="controlador"><br>
        <br>

        <div id="contenedor">

            {{#each lista}}
            <div id="Nombre">
                <label>Nombres:<b> {{nombre}} </b></label>
            </div>

            <div id="Apellido">
                <label>Apellidos:{{apellido}}</label>
            </div>

            <div id="username">
                <label>Username:{{username}}</label>
            </div>

            <div id="password">
                <label>Password:{{password}}</label>
            </div>

            <div id="estado">
                <label>Estado: {{estado}}</label>
            </div>

            <div>
                <a href="/usuario/editar/{{id_usuario}}">
                    <button type="button" id="editar">Editar</button>
                </a>
                <a href="/usuario/eliminar/{{id_usuario}}">
                    <button type="button" id="eliminar">Eliminar</button>
                </a>
            </div><br>
            {{/each}}

        </div>
    </div>
</form>
</div>
<div id="agregar">
    <a href="/usuario/agregar/{{user.id_usuario}}">
        <button type="button" id="agregar"><b> AGREGAR </b></button>
    </a>
</div>