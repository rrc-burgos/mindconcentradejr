<link rel="stylesheet" href="/css/agregar.css ">

<form action="/categoria/agregar/" method="post" id="contenedor">
    <div id="controlador"><br>
        <div id="titulo">
            {{#each idMax}}
            <label><b>AGREGAR CATEGORIA</b></label>
            {{/each}}
        </div>

        <div id="Nombre"><br>
            <label><b> Nombre de la Categoría: </b></label>
            <input type="text" name="nombreCategoria" id="nombre">
        </div>

        <div id="Descripcion"><br>
            <label><b> Descripcion de la Categoría:</b></label>
            <input type="text" name="descripcionCategoria" id="descripcion">
        </div>
        <br>
        <button type="submit" id="confirmar"><b> Guardar </b></button>


    </div>
</form>
