<link rel="stylesheet" href="/css/editar.css " />

{{#each lista}}

<form action="/cliente/editar/{{id_cliente}}" method="post">
  <div class=" " id="contenedor">
    <br />

    <div id="titulo">
      <label><b>AGREGAR ACTIVIDAD A LA AGENDA</b></label>
    </div>

    <div id="nombreCliente">
      <label><b> Nombre:</b></label>
      <input value="{{nombreCliente}}" type="text" name="nombreCliente" id="nombreCliente" />
    </div>
    <div id="apellidoCliente">
      <br />
      <label>Apellido:</label>
      <input value="{{apellidoCliente}}" type="text" name="apellidoCliente" id="apellidoCliente" />
    </div>
    <div id="username">
      <br />
      <label><b>Nick</b></label>
      <input value="{{username}}" type="text" name="horaAgenda" id="hora" />
    </div>
    <div id="direccionCliente">
      <br />
      <label><b>Direccion</b></label>
      <input value="{{direccionCliente}}" type="text" name="direccionCliente" id="direccionCliente" />
    </div>
    <br /><br />
    <div id="celularCliente">
      <br />
      <label><b>Celular</b></label>
      <input value="{{celularCliente}}" type="text" name="celularCliente" id="celularCliente" />
    </div>
    <div id="hobbieCliente">
      <br />
      <label><b>Hobbie:</b></label>
      <input value="{{hobbieCliente}}" type="text" name="hobbieCliente" id="hobbieCliente" />
    </div>
    <br /><br />
    {{/each}}

    <div id="guardar">
      <button type="submit" id="actualizar">Actualizar</button>
    </div>
  </div>
</form>